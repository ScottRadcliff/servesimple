<%= bootstrap_form_for(@person, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.text_field :name %>

  <%= f.form_group :gender, label: { text: "Gender" } do %>
    <%= f.radio_button :gender, "", label: "Unknown", inline: true %>
    <%= f.radio_button :gender, "M", label: "Male", inline: true %>
    <%= f.radio_button :gender, "F", label: "Female", inline: true %>
  <% end %>

  <%= f.phone_field :phone, control_col: "col-sm-4" %>
  <%= f.email_field :email %>

  <%= f.form_group do %>
    <%= f.primary "Save" %>
  <% end %>
<% end %>
